<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table engine="innodb" name="pulchritudinous_queue_labour" resource="default" comment="Labour Queue">
        <column name="id" identity="false"  nullable="true" xsi:type="int" comment="Store ID"/>
        <column name="parent_id" identity="false"  nullable="true" xsi:type="int" comment="Parent ID"/>
        <column name="worker" length="255"  nullable="true" xsi:type="varchar" comment="Worker Code"/>
        <column name="identity" nullable="true" xsi:type="text" comment="Worker Identity"/>
        <column name="priority" identity="false"  nullable="true" xsi:type="int" comment="Worker Priority"/>
        <column name="payload" nullable="true" xsi:type="blob" comment="Payload"/>
        <column name="status" length="255"  nullable="true" xsi:type="varchar" comment="Status"/>
        <column name="attempts" identity="false"  nullable="true" xsi:type="int" comment="Attempt"/>
        <column name="pid" identity="false"  nullable="true" xsi:type="int" comment="PID"/>
        <column name="by_recurring" nullable="true" xsi:type="smallint" comment="Is created by recurring"/>
        <column name="execute_at" identity="false" nullable="true" xsi:type="int" comment="Execute at"/>
        <column name="created_at" identity="false" nullable="true" xsi:type="int" comment="Created At"/>
        <column name="updated_at" identity="false" nullable="true" xsi:type="int" comment="Updated At"/>
        <column name="started_at" identity="false" nullable="true" xsi:type="int" comment="Updated At"/>
        <column name="finished_at" identity="false" nullable="true" xsi:type="int" comment="Updated At"/>

        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="PULCH_Q_PARENT_ID_PULCH_Q_ID" table="pulchritudinous_queue_labour" column="parent_id" referenceTable="pulchritudinous_queue_labour" referenceColumn="id" onDelete="CASCADE"/>
    </table>
</schema>

